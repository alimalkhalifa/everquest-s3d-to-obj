{
   "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "noImplicitAny": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "outDir": "app",
      "baseUrl": ".",
      "inlineSourceMap": true,
      "inlineSources": true,
      "experimentalDecorators": true,
      "paths": {
         "*": ["node_modules/*"]
      }
   },
   "include": [
      "src/**/*"
   ]
}